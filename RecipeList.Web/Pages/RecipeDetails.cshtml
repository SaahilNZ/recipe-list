@page
@model RecipeDetailsModel
@{
    ViewData["Title"] = @Model.PageRecipe.Name;
}
<h2>@ViewData["Title"]</h2>
<p>Created by <strong>@Model.PageRecipe.CreatedBy.FirstName @Model.PageRecipe.CreatedBy.LastName</strong></p>
<p>Serves: <strong>@Model.PageRecipe.Serves</strong></p>

<h3>Ingredients</h3>
<ul>
    @foreach (var ingredient in Model.PageRecipe.Ingredients)
    {
        <li>@Html.Raw(@ingredient.Name)</li>
    }
</ul>

<h3>Method</h3>
<ol>
    @foreach (var step in Model.PageRecipe.Method)
    {
        <li>@Html.Raw(@step)</li>
    }
</ol>

