<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recipe Book</title>
    <link rel="stylesheet" href="~/css/site.min.css">
    <link rel="stylesheet" href="~/css/vendor.min.css">
</head>
<body>
    <div class="bg-dark sticky-top">
        <nav class="navbar navbar-dark navbar-expand-lg container">
            <a asp-page="/Index" class="navbar-brand">Recipe Book</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNavAltMarkup">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link" asp-page="/Index">Home</a>
                </div>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Saahil Hari</p>
        </footer>
    </div>

    <script src="~/js/site.min.js"></script>
    <script src="~/js/vendor.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
